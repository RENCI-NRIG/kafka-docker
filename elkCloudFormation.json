        "Default": "lassaress",
        "Description" : "S3 bucket Name",
        "Type": "String",
        "MinLength": "1",
        "MaxLength": "64"
      },
    "ElasticVersion" : {
        "Default": "6.5.4",
        "Description" : "Elastic Stack Version",
        "Type": "String",
        "MinLength": "1",
        "MaxLength": "64",
       "AllowedPattern": "(\\d{1,3})\\.(\\d{1,3})\\.(\\d{1,3})"
      },
